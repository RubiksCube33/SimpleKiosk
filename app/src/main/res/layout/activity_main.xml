<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="311dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오른쪽 빨간색 부분에 손을 대고 입장 부탁드립니다.(체온체크) ->"
            android:fontFamily="@font/ngb"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12pt"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:fontFamily="@font/neb"
            android:gravity="center_horizontal"
            android:text="어떤 업무를 원하시나요?"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30pt" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button1"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/ng"
                    android:insetLeft="30dp"
                    android:insetTop="15dp"
                    android:insetRight="15dp"
                    android:insetBottom="15dp"
                    android:text="민원 접수"
                    android:textColor="@color/white"
                    android:textSize="20pt"
                    app:backgroundTint="#585858" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:background="@drawable/button_background"
                    android:fontFamily="@font/ng"
                    android:insetLeft="15dp"
                    android:insetTop="15dp"
                    android:insetRight="30dp"
                    android:insetBottom="15dp"
                    android:text="임금, 퇴직금 및 \n 기타 신고"
                    android:textColor="@color/white"
                    android:textSize="20pt"
                    app:backgroundTint="#585858" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/button3"
                    android:layout_width="100dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/ng"
                    android:insetLeft="30dp"
                    android:insetTop="15dp"
                    android:insetRight="15dp"
                    android:insetBottom="15dp"
                    android:text="담당 공무원 찾기"
                    android:textColor="@color/white"
                    android:textSize="20pt"
                    app:backgroundTint="#585858" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_background"
                    android:fontFamily="@font/ng"
                    android:insetLeft="15dp"
                    android:insetTop="15dp"
                    android:insetRight="30dp"
                    android:insetBottom="15dp"
                    android:text="상담 신청"
                    android:textColor="@color/white"
                    android:textSize="20pt"
                    app:backgroundTint="#585858" />
            </TableRow>

        </TableLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>